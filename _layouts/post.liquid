---
layout: default
---
<h1>{{ page.title }}</h1>
<strong style="float: left;">Posted on {{ page.date | date: "%x"}}.</strong>
<div style="float: right;">
     <a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-via="nilswloka">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>{% if page.flattr %}
     <a class="FlattrButton" style="display:none;" rev="flattr;button:compact;" href="http://www.nilswloka.com{{page.url}}"></a>&nbsp;&nbsp;{% endif %}
     <g:plusone size="medium"></g:plusone>
</div>
<div style="float: left;">
{{content}}
</div>
<div style="clear: both;" id="disqus_thread"></div>
<script type="text/javascript">
    var disqus_shortname = 'nilswloka'; // required: replace example with your forum shortname
    var disqus_developer = 0; // developer mode is on
    var disqus_identifier = '{{page.id}}';
    var disqus_url = 'http://www.nilswloka.com{{page.url}}';
    var disqus_title = '{{page.title | escape_javascript}}';
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
